{
    "name": "basic-ts-nodejs-template",
    "version": "1.0.0",
    "description": "Basic template project to start programming with TypeScript and NodeJS",
    "main": "build/baackend/app.js",
    "scripts": {
        "clean": "rm -rf build",
        "build": "npm run clean && cd backend && tsc && cd ..",
        "build-start": "npm run build && npm run start",
        "start": "node -r ./scripts/module-alias-register.js build/backend/app.js",
        "test": "mocha -r ./scripts/module-alias-register.js build/backend/tests/run-all.js",
        "update-deps": "ncu -u && npm install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Veetaha/basic-ts-nodejs-template.git"
    },
    "keywords": [
        "template",
        "typescript",
        "nodejs"
    ],
    "author": "Veetaha",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Veetaha/basic-ts-nodejs-template/issues"
    },
    "homepage": "https://github.com/Veetaha/basic-ts-nodejs-template#readme",
    "devDependencies": {
        "@types/chai": "latest",
        "@types/colors": "latest",
        "@types/dotenv": "latest",
        "@types/lodash": "latest",
        "@types/mathjs": "latest",
        "@types/mocha": "latest",
        "@types/node": "latest",
        "chai": "latest",
        "mocha": "latest",
        "npm-check-updates": "latest",
        "typescript": "latest"
    },
    "dependencies": {
        "colors": "latest",
        "dotenv": "latest",
        "lodash": "latest",
        "mathjs": "latest",
        "module-alias": "latest",
        "ts-typedefs": "latest",
        "vee-type-safe": "latest"
    }
}
