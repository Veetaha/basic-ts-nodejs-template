    "version": "0.2.0",
    "configurations": [
        {
            "name":    "TS Node (Launch)",
            "type":    "node",
            "request": "launch",
            "cwd":   "${workspaceFolder}/backend",
            "args": ["${workspaceFolder}/backend/app.ts"],
            "runtimeArgs": [
                "--nolazy",  
                "-r", "ts-node/register",
                "-r", "tsconfig-paths/register"
            ],
            "protocol": "inspector"
        },
        {
            "name": "TS Node (Attach)",
            "type": "node",
            "request": "attach",
            "protocol": "inspector"
        }
    ]
}